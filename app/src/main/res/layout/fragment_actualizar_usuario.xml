<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo"
    tools:context=".ui.viajes.ActualizarUsuarioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/colorfondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingBottom="30dp"
            android:background="@color/colorfondo"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/bhp_nuevo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Actualización"
                android:textColor="@color/colororange"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_razonsocial"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/nombreusuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:hint="Nombre de Usuario"
                        android:textColor="@color/white"
                        android:textColorHint="@color/material_grey_600"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_ruc"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:digits="1234567890"
                        android:maxLength="8"
                        android:hint="Teléfono (Ingresar sin +569)"
                        android:textColor="@color/white"
                        android:textColorHint="@color/material_grey_600"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_direccion"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:hint="E-mail"
                        android:textColor="@color/white"
                        android:textColorHint="@color/material_grey_600"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_direccion"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:hint="Cédula"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_telefono"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/contrasena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:hint="Contraseña"
                        android:textColor="@color/white"
                        android:textColorHint="@color/material_grey_600"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="30dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:src="@drawable/ic_telefono"-->
                <!--                        tools:ignore="ContentDescription" />-->

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/shape"
                        android:hint="Dirección"
                        android:textColor="@color/white"
                        android:textColorHint="@color/material_grey_600"
                        android:textColorHighlight="@color/white"
                        android:textColorLink="@color/white"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <Button
                android:id="@+id/actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:layout_marginTop="25dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_button"/>


        </LinearLayout>
    </ScrollView>


</FrameLayout>