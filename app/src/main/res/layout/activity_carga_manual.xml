<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorfondo"
    tools:context=".CargaManualActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorfondo"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:background="@color/colorfondo"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/icono_spencer600" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:text="NORTRANS GO"
                android:gravity="center"
                android:textColor="@color/colororange"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Registro Manual"
            android:textColor="@color/colororange"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!--                    <ImageView-->
            <!--                        android:layout_width="30dp"-->
            <!--                        android:layout_height="20dp"-->
            <!--                        android:src="@drawable/ic_telefono"-->
            <!--                        tools:ignore="ContentDescription" />-->

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/cedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/shape"
                    android:hint="CÃ©dula"
                    android:digits="1234567890-kK"
                    android:maxLength="11"
                    android:textColor="@color/white"
                    android:textColorHint="@color/material_grey_600"
                    android:textColorHighlight="@color/white"
                    android:textColorLink="@color/white"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>
        <Button
            android:id="@+id/verificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar datos"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center">


                <TextView
                    android:id="@+id/nombrecompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_asiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <!--                    <ImageView-->
            <!--                        android:layout_width="30dp"-->
            <!--                        android:layout_height="20dp"-->
            <!--                        android:src="@drawable/ic_direccion"-->
            <!--                        tools:ignore="ContentDescription" />-->

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/asiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/shape"
                    android:hint="Asiento"
                    android:textColor="@color/white"
                    android:textColorHint="@color/material_grey_600"
                    android:textColorHighlight="@color/white"
                    android:textColorLink="@color/white"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <!--                    <ImageView-->
            <!--                        android:layout_width="30dp"-->
            <!--                        android:layout_height="20dp"-->
            <!--                        android:src="@drawable/ic_telefono"-->
            <!--                        tools:ignore="ContentDescription" />-->

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/temperatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/shape"
                    android:hint="Temperatura"
                    android:textColor="@color/white"
                    android:textColorHint="@color/material_grey_600"
                    android:textColorHighlight="@color/white"
                    android:textColorLink="@color/white"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>
        <Button
            android:id="@+id/registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
